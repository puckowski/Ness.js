{
  "name": "ness.js",
  "version": "1.5.0",
  "description": "Compile CSS Nesting Module syntax to CSS at runtime.",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "terser -o index.min.js --compress --mangle -- index.js",
    "buildNode": "terser -o index.node.min.js --compress --mangle -- index.node.js",
    "buildStyle": "terser -o index.style.min.js --compress --mangle -- index.style.js",
    "buildLink": "terser -o index.link.min.js --compress --mangle -- index.link.js",
    "buildCjs": "terser -o index.min.cjs --compress --mangle -- index.cjs",
    "buildAll": "npm run build && npm run buildNode && npm run buildStyle && npm run buildLink && npm run buildCjs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/puckowski/Ness.js.git"
  },
  "keywords": [
    "CSS",
    "Nested",
    "Layers",
    "Layer"
  ],
  "author": "Daniel Puckowksi",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/puckowski/Ness.js/issues"
  },
  "homepage": "https://github.com/puckowski/Ness.js#readme"
}
